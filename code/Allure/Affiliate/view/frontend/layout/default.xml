<?xml version="1.0"?>
 
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.components">
            <block class="Allure\Affiliate\Block\Js\Hash" name="affiliate_check_hash" template="Allure_Affiliate::js/hash.phtml"/>
        </referenceBlock>
        <referenceBlock name="top.links">
            <block class="Allure\Affiliate\Block\Html\Link" name="affiliate_top_link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Affiliate</argument>
                    <argument name="title" xsi:type="string" translate="true">My Affiliate</argument>
                    <argument name="path" xsi:type="string">affiliate/</argument>
                    <argument name="type" xsi:type="string">top_link</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Allure\Affiliate\Block\Html\Link" name="affiliate_footer_link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Affiliate</argument>
                    <argument name="title" xsi:type="string" translate="true">My Affiliate</argument>
                    <argument name="path" xsi:type="string">affiliate/</argument>
                    <argument name="type" xsi:type="string">footer_link</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
