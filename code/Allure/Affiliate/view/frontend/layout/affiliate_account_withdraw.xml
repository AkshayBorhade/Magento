<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="affiliate_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Allure\Affiliate\Block\Account\Withdraw" name="affiliate.account.withdraw" template="Allure_Affiliate::account/withdraw.phtml" cacheable="false">
                <block class="Allure\Affiliate\Block\Account\Withdraw\Methods" name="affiliate.account.withdraw.offline" as="offline" template="Allure_Affiliate::account/withdraw/methods/offline.phtml"/>
                <block class="Allure\Affiliate\Block\Account\Withdraw\Methods" name="affiliate.account.withdraw.paypal" as="paypal" template="Allure_Affiliate::account/withdraw/methods/paypal.phtml"/>
                <block class="Allure\Affiliate\Block\Account\Withdraw\Transaction" name="affiliate.account.withdraw.transaction" as="withdraw.transaction" template="Allure_Affiliate::account/withdraw/transactions.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
