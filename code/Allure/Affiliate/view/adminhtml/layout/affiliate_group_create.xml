<?xml version="1.0"?>
 
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Allure\Affiliate\Block\Adminhtml\Group\Create" name="allure_affiliate_group_create"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Allure\Affiliate\Block\Adminhtml\Group\Create\Tabs" name="allure_affiliate_group_tabs">
                <block class="Allure\Affiliate\Block\Adminhtml\Group\Create\Tab\Group" name="affiliate_group_create_tab_group"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">group</argument>
                    <argument name="block" xsi:type="string">affiliate_group_create_tab_group</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
