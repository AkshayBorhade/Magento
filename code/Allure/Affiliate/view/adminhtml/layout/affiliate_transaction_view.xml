<?xml version="1.0"?>
 
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Allure\Affiliate\Block\Adminhtml\Transaction\View" name="affiliate_transaction_view" />
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Allure\Affiliate\Block\Adminhtml\Transaction\View\Tabs" name="affiliate_transaction_tabs">
                <block class="Allure\Affiliate\Block\Adminhtml\Transaction\View\Tab\Transaction" name="affiliate_transaction_view_tab_transaction"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">transaction</argument>
                    <argument name="block" xsi:type="string">affiliate_transaction_view_tab_transaction</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
